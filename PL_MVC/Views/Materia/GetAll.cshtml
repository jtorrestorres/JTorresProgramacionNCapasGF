@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Materia</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1 col-md-offset-11">
            @Html.ActionLink("+", "Form", "Materia", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>IdMateria</th>
                        <th>Nombre</th>
                        <th>Creditos</th>
                        <th>Costo</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ML.Materia materia in Model.Materias)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Materia", new { IdMateria = materia.IdMateria })"></a>
                            </td>
                            <td class="hidden">@materia.IdMateria</td>

                            <td>@materia.IdMateria</td>
                            <td>@materia.Nombre</td>
                            <td>@materia.Creditos</td>
                            <td>@materia.Costo</td>
                            <td>@materia.Costo</td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>




